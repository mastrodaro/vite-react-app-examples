{
  "compilerOptions": {
    /* Type Checking */
    "strict": true,

    /* Language and Environment */
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",

    /* Modules */
    "module": "esnext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Emit */
    "noEmit": true,

    /* JavaScript Support */
    "allowJs": false,

    /* Interop Constraints */
    "esModuleInterop": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["src", "vite.config.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
